---
import Layout from '~/layouts/PageLayout.astro';
import { getEntry, getCollection } from 'astro:content';
import Image from '~/components/common/Image.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import { marked } from 'marked';

// Fetch top content
const topContent = await getEntry('faqs_page_top_content', 'top-content');
if (!topContent) {
  throw new Error('FAQs page top content not found');
}

const { title, subheading, image, body } = topContent.data;

// Convert markdown to HTML if body exists
const htmlContent = body ? marked.parse(body) : null;

// Fetch and filter FAQ items, sorted by order
const allFaqs = await getCollection('faqs_page_items');
const faqs = allFaqs.filter((faq) => faq.data.published).sort((a, b) => a.data.order - b.data.order);

const metadata = {
  title: title,
};
---

<Layout metadata={metadata}>
  <div class="container mx-auto px-4 py-16">
    <!-- Title with font-heading -->
    <h1 class="text-4xl font-bold text-center mb-8 font-heading">{title}</h1>

    <!-- Optional subheading (H3, centred, without font-heading) -->
    {subheading && <h3 class="text-2xl text-center mb-8">{subheading}</h3>}

    <!-- Optional image (centred) -->
    {
      image && (
        <div class="flex justify-center mb-8">
          <Image src={image} alt={title} class="max-w-full h-auto" />
        </div>
      )
    }

    <!-- Optional markdown content -->
    {htmlContent && <div class="prose prose-lg dark:prose-invert mx-auto max-w-4xl mb-12" set:html={htmlContent} />}
  </div>

  <!-- FAQ Items -->
  <FAQs
    items={faqs.length > 0
      ? faqs.map((faq) => ({
          title: faq.data.question,
          description: faq.data.answer,
        }))
      : []}
  />
</Layout>
