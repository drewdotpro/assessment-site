---
import FontIconSylexiad from '~/components/ui/FontIconSylexiad.astro';
import FontIconOpenDyslexic from '~/components/ui/FontIconOpenDyslexic.astro';
import FontIconFastSans from '~/components/ui/FontIconFastSans.astro';

export interface Props {
  iconClass?: string;
}

const { iconClass = 'w-5 h-5' } = Astro.props;

const baseClass = 'text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-1.5 inline-flex items-center transition-all';
---

<div class="flex gap-1">
  <button
    type="button"
    class={baseClass}
    aria-label="Sylexiad Sans Medium"
    data-font-button="sylexiad"
  >
    <FontIconSylexiad class={iconClass} />
  </button>

  <button
    type="button"
    class={baseClass}
    aria-label="OpenDyslexic"
    data-font-button="opendyslexic"
  >
    <FontIconOpenDyslexic class={iconClass} />
  </button>

  <button
    type="button"
    class={baseClass}
    aria-label="Fast Sans"
    data-font-button="fastsans"
  >
    <FontIconFastSans class={iconClass} />
  </button>
</div>
